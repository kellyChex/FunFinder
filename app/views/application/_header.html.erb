    <!-- Header -->
    <header id="top" class="header">
        <div class="text-vertical-center">
    		<%= image_tag ("funfinder-logo4.png") %>
            <h3>Because Fun Is Everywhere</h3>
            <form action ='/' method='get'>
              <label for="word_search_input">Find Fun:</label>
              <input id="word_search_input" type="text" name="search_string" />
              <input type="submit" value="Search" />
            </form>
            <br>
            <a href="#about" class="btn btn-dark btn-lg">Find Fun</a>
        </div>

        <p>
          <% if !@searchedEvents.nil? %>
            <% if !@searchedEvents.empty? %>
              <h3>Event(s) found:</h3>
              <% @searchedEvents.each do |event| %>
                <%= link_to event.title, event %><br>
              <% end %>
              <% if !@searchedTags.nil? %>
                <% if !@searchedTags.empty? %>
                  <h3>Recipes found:</h3>
                  <% @searchedTags.each do |tag| %>
                    <%= link_to tag.event.title, tag.event %><br>
                  <% end %>
                <% end %>
              <% end %>
            <% elsif %>
              <% if !@searchedTags.nil? %>
                <% if !@searchedTags.empty? %>
                  <h3>Recipes found:</h3>
                  <% @searchedTags.each do |tag| %>
                    <%= link_to tag.event.title, tag.event %><br>
                  <% end %>
                <% end %>
              <% end %>
            <% else %>
            <h3>No Events Found</h3>
            <% end %>
          <% end %>
        </p>

    </header>
