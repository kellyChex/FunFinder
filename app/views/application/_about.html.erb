<!-- About -->
<section id="about" class="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Welcome to <strong>FunFinder</strong></h2>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 about-box">
                <h2>Sort By</h2>
                <hr>
                <h3><%= sortable "title" %></h3>
                <h3><%= sortable "start_date" %></h3>
                <h3><%= sortable "end_date" %></h3>
            </div>
            <div class="col-md-4">
<%= image_tag("funfinder-logo-phone.png") %>
            </div>
            <div class="col-md-4 event-list">

                    <table>
                        <tbody>
                            <% @events.each do |event| %>
                                <tr class="event-row">
                                    <td><%= event.title %></td> 
                                    <td><%= event.start_date %></td> 
                                    <td><%= event.end_date %></td>

                                    <% if user_signed_in? %>
                                        <td><%= link_to 'Show', event, class: "lnk thi" %></td>
                                    <% end %>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>

            </div>
        </div>
    </div>
</section>
